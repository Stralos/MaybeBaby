{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "airbnb-flow",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "react",
    "import",
    "jsx-a11y",
    "flowtype",
    "flowtype-errors" 
  ],
  "rules": {
    "flowtype-errors/show-errors": 2,
    "arrow-body-style": 0,
    "jsx-a11y/href-no-hash": 0
  },
  "env": {
    "jest": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    },
    "import/resolver": {
      "babel-module": {}
    }
  }
}
